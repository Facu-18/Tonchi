<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Kalam:wght@300;400;700&display=swap" rel="stylesheet">
    <link href="/css/app.css" rel="stylesheet">
    <title>Veterinaria - <%= nombrePagina %></title>
</head>
<body class="bg-gray-100 text-gray-900 font-sans">
    <header class="bg-white shadow-lg rounded-lg p-6 mb-10">
        <div class="container mx-auto flex items-center justify-between">
            <a href="/">
                <img src="/img/vete-removebg-preview.png" alt="Logo Veterinaria" class="h-20"> <!-- Aumentar tamaño del logo -->
            </a>
            <nav class="flex space-x-6">
                <a href="#" class="text-verde-dark hover:text-verde font-medium transition-colors">Sacar Turno</a>
                <a href="/iniciar-sesion" class="text-verde-dark hover:text-verde font-medium transition-colors">Iniciar Sesión</a>
                <a href="/crear-cuenta" class="text-verde-dark hover:text-verde font-medium transition-colors">Registrarse</a>
            </nav>
        </div>
    </header>

    <% if(locals.mensajes) { %>
        <% const categoria = Object.keys(locals.mensajes) %>
        <% if(categoria.length) { %>
            <% locals.mensajes[categoria].forEach(alerta => { %>
                <div class="container mx-auto p-4 mb-4 bg-red-100 border border-red-400 text-red-700 rounded-lg">
                    <p><%= alerta %></p>
                </div>
            <% }) %>
        <% } %>
    <% } %>

    <main class="container mx-auto p-6 bg-white rounded-lg shadow-lg mb-10">
        <%- body %>
    </main>

    <footer class="bg-white shadow-lg rounded-lg p-6">
        <div class="container mx-auto text-center">
            <nav class="flex justify-center space-x-6 mb-4">
                <a href="#" class="text-verde-dark hover:text-verde font-medium transition-colors">Sacar Turno</a>
                <a href="/iniciar-sesion" class="text-verde-dark hover:text-verde font-medium transition-colors">Iniciar Sesión</a>
                <a href="/crear-cuenta" class="text-verde-dark hover:text-verde font-medium transition-colors">Registrarse</a>
            </nav>
            <p class="text-gray-700">&copy; 2024 Veterinaria. Todos los derechos reservados.</p>
        </div>
    </footer>
</body>
</html>
