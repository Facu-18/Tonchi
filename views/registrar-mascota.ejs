<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Kalam:wght@300;400;700&display=swap" rel="stylesheet">
    <link href="/css/app.css" rel="stylesheet">
    <title>Registrar Mascota</title>
</head>
<body class="bg-gray-100 text-gray-900 font-sans">
    <main class="flex justify-center items-center min-h-screen p-4">
        <div class="w-full max-w-2xl bg-white rounded-lg shadow-lg p-8">
            <h1 class="text-3xl font-bold text-gray-900 mb-6 text-center font-kalam">Registrar Mascota</h1>

            <% if (errores && errores.length > 0) { %>
                <div class="max-w-md mx-auto my-10">
                    <% errores.forEach(function(error) { %>
                        <p class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold"><%= error.msg %></p>
                    <% }); %>
                </div>
            <% } %>

            <form action="/registrar-mascota" method="POST" class="space-y-4">
                <div class="space-y-2">
                    <label class="block text-gray-700 font-medium">Nombre de la Mascota</label>
                    <input type="text" name="nombre" placeholder="Nombre de la Mascota" class="w-full p-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-verde focus:border-transparent">
                </div>
                <div class="space-y-2">
                    <label class="block text-gray-700 font-medium">Edad de la Mascota</label>
                    <input type="number" name="edad" placeholder="Edad de la Mascota" class="w-full p-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-verde focus:border-transparent">
                </div>
                <div class="space-y-2">
                    <label class="block text-gray-700 font-medium">Especie</label>
                    <select name="especie_id" class="w-full p-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-verde focus:border-transparent">
                        <option value="" disabled selected>--Selecciona una especie--</option>
                        <% especies.forEach(especie => { %>
                            <option value="<%= especie.id %>"><%= especie.nombre %></option>
                        <% }) %>
                    </select>
                </div>
                <div class="text-center">
                    <button type="submit" class="bg-verde hover:bg-verde-dark text-white font-bold py-3 px-6 rounded-lg shadow-md transition-transform transform hover:scale-105">Registrar Mascota</button>
                </div>
            </form>
        </div>
    </main>
</body>
</html>
